@model PB.Domain.Posting

@{
    ViewBag.Title = "Insert";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 my-2">
            <div class="card my-2">
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Adicionar Postagem</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label for="title">Título: </label>
                                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label for="body_text">Texto da postagem: </label>
                                @Html.EditorFor(model => model.body_text, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.body_text, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Assunto: </label>
                                @Html.DropDownListFor(model => model.subject_code, new SelectList( ViewBag.Subjects, "subject_code", "description"), new { @class = "form-control"}) 
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Postar" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 my-2">
            <div class="card my-2">
                <div class="card-body">
                    <h6>Mais Opções</h6>
                    <hr>
                    @Html.ActionLink("Voltar Para Lista", "Index", new { htmlAttributes = new { @class = "mr-2" } })
                </div>
            </div>
        </div>
    </div>
